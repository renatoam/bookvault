{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentSize": 2,
		"lineEnding": "lf",
		"lineWidth": 120,
		"quoteStyle": "single",
    "trailingComma": "all"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn",
				"suspicious/noExplicitAny": "error",
				"suspicious/noEmptyInterface": "error",
				"suspicious/noShadowRestrictedNames": "error",
				"complexity/noExcessiveCognitiveComplexity": "warn",
				"nursery/noConsole": "warn",
				"nursery/useNamingConvention": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
