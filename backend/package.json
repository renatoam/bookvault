{
  "name": "curotec-backend",
  "version": "1.0.0",
  "description": "Curotec service. Used for technical assessment.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx --require @dotenvx/dotenvx/config --watch src/index.ts",
    "build": "NODE_ENV=production tsup src/index.ts --format esm",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "check": "biome check ./src",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src",
    "migrate:watch": "prisma migrate dev --name init --schema ./src/config/schema.prisma",
    "migrate": "prisma migrate deploy --schema ./src/config/schema.prisma"
  },
  "keywords": [
    "node",
    "typescript",
    "backend"
  ],
  "author": "Renato Alves de Melo",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.1",
    "biome": "^0.3.3",
    "prisma": "^6.10.1",
    "simple-git-hooks": "^2.13.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.44.2",
    "@prisma/client": "^6.10.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "pino-http": "^10.5.0",
    "zod": "^3.25.67"
  },
  "simple-git-hooks": {
    "commit-msg": "commitlint --edit"
  }
}
